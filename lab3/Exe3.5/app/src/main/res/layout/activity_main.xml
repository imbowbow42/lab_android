<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/lv_users"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/activity_users_txt_total_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Total users: 0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/activity_users_btn_create"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="@color/purple_500"
            android:paddingVertical="5dp"
            android:text="Add 5 More Users" />

        <Button
            android:id="@+id/activity_users_btn_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F31C60"
            android:layout_marginHorizontal="10dp"
            android:paddingVertical="5dp"
            android:text="Remove Last 5 Users"/>
    </LinearLayout>

</LinearLayout>